<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeRefreshLayoutGiftPost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrillViewGiftPost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/giftTitleGiftPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/giftImageGiftPost"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_below="@id/giftTitleGiftPost"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/giftDateGiftPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/giftImageGiftPost"
                android:layout_marginLeft="5dp"
                />

            <TextView
                android:id="@+id/giftStatusGiftPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/giftImageGiftPost"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@id/giftDateGiftPost"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/giftDescriptionGiftPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/giftDateGiftPost"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/linkGiftPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/giftDescriptionGiftPost"
                android:layout_marginLeft="5dp"
                android:autoLink="web"
                android:linksClickable="true"
                android:text=""
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/commentsGiftPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_below="@id/linkGiftPost"
                android:text="@string/gift_post_comments"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/reservedTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_below="@id/commentsGiftPost"
                android:text="@string/wish_not_reserved"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/reservedTVwhat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_below="@id/reservedTV"
                android:text="@string/wish_what"
                android:textStyle="italic"
                android:visibility="gone"/>

        </RelativeLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>
